<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateTaskActivity">

    <EditText
        android:id="@+id/fieldTaskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Task Name" />

    <EditText
        android:id="@+id/fieldTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:layout_below="@id/fieldTaskName"
        android:inputType="textMultiLine"
        android:hint="Description" />

    <EditText
        android:id="@+id/fieldTaskEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fieldTaskDescription"
        android:ems="10"
        android:inputType="datetime"
        android:hint="Deadline (DD/MM/YYYY)" />

    <CheckBox
        android:id="@+id/fieldIsTaskImportant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fieldTaskEnd"
        android:text="Important (not implemented for now)" />

    <Button
        android:id="@+id/buttonCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fieldIsTaskImportant"
        android:backgroundTint="#33DD33"
        android:textColor="#FFFFFF"
        android:text="Create" />

</RelativeLayout>